<resources>
    <!-- Base application theme. -->
    <style name = "Theme.FoodInfo" parent = "Theme.MaterialComponents.Light.NoActionBar">
        <item name = "android:windowNoTitle">true</item>
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowFullscreen">true</item>
        <item name = "android:windowContentOverlay">@null</item>
        <!-- для изменения цвета курсора и выделенного текста в EditText -->
        <item name = "colorAccent">@color/target_font</item>
    </style>

    <!--    недоделанная тема для нижней навигации-->
    <style name = "Theme.NavBar" parent = "Theme.MaterialComponents.Light.DarkActionBar">
        <item name = "android:background">@color/secondary_background</item>
        <item name = "android:colorPrimary">@color/main_font</item>
        <item name = "itemIconTint">@color/active_font</item>
        <item name = "itemTextColor">@color/active_font</item>
    </style>

    <!--    тема для больших ShapeableImageView-->
    <style name = "ThemeShapeAppearanceBig">
        <item name = "cornerFamily">rounded</item>
        <item name = "cornerSize">30dp</item>
        <item name = "elevation">3dp</item>
    </style>

    <!--    тема для средних ShapeableImageView-->
    <style name = "ThemeShapeAppearanceNormal">
        <item name = "cornerFamily">rounded</item>
        <item name = "cornerSize">20dp</item>
        <item name = "elevation">3dp</item>
    </style>

    <!--    тема для хедеров-->
    <style name = "ThemeTextViewHeader">
        <item name = "fontFamily">@font/product_sans_medium</item>
        <item name = "android:textSize">18sp</item>
        <item name = "android:textColor">@color/header_font</item>
    </style>

    <!--    тема для калорий и заголовков-->
    <style name = "ThemeTextViewBig">
        <item name = "android:textSize">18sp</item>
        <item name = "android:gravity">center</item>
        <item name = "android:textColor">@color/header_font</item>
    </style>

    <!--    тема для основных текствью-->
    <style name = "ThemeMainTextView">
        <item name = "android:textColor">@color/active_font</item>
        <item name = "android:textSize">15sp</item>
        <item name = "android:fontFamily">@font/product_sans_regular</item>
    </style>

    <!--    тема для TabLayout, не знаю как тут задать tabTextColor-->
    <style name = "ThemeTab">
        <item name = "android:textSize">16sp</item>
        <item name = "android:fontFamily">@font/product_sans_medium</item>
    </style>

    <!--    тема для TabLayout, не знаю как тут задать tabTextColor-->
    <style name = "ThemeSearchView">
        <item name = "android:textSize">16sp</item>
        <item name = "android:textColor">@color/header_font</item>
        <item name = "android:textColorHint">@color/active_font</item>
        <item name = "android:fontFamily">@font/product_sans_regular</item>
    </style>

    <!--    тема для выделенных текствью-->
    <style name = "ThemeTargetTextView">
        <item name = "android:textColor">@color/target_font</item>
        <item name = "android:textSize">15sp</item>
        <item name = "android:fontFamily">@font/product_sans_regular</item>
    </style>

    <!--    тема scrollable элементов-->
    <style name = "ThemeScrollable">
        <item name = "android:clipChildren">false</item>
        <item name = "android:clipToPadding">false</item>
    </style>

    <!--    тема кнопки-->
    <style name = "ThemeButton">
        <item name = "android:layout_width">60dp</item>
        <item name = "android:layout_height">60dp</item>
        <item name = "android:padding">18dp</item>
    </style>
</resources>